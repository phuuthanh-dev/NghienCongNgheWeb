mixin pagination(objectPagination)
    if objectPagination.totalPages > 1
        nav
            ul(class="pagination")
                if(objectPagination.currentPage > 1)
                    li(class="page-item")
                        button(
                            class="page-link"
                            button-pagination = objectPagination.currentPage - 1
                        ) Trang trước

                - for (var i = 1; i <= objectPagination.totalPages; i++)
                    li(class=`page-item ${objectPagination.currentPage == i ? "active" : ""}`)
                        button(
                            class="page-link"
                            button-pagination=i
                        ) #{i}

                if(objectPagination.currentPage < objectPagination.totalPages)
                    li(class="page-item")
                        button(
                            class="page-link"
                            button-pagination = objectPagination.currentPage + 1
                        ) Kế tiếp