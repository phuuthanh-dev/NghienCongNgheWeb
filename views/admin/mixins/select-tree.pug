mixin select-tree(categories, level = 1, id = "")
  each item in categories
    - const prefix = Array(level + 1).join("--- ");
    option(
      value=item._id
      selected=(item._id == id ? true : false)
    ) #{prefix} #{item.title}
    if(item.children)
      +select-tree(item.children, level + 1, id)