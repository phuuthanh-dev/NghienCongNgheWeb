extends  ../../layouts/default.pug
include ../../mixins/filter.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/alert.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/sort.pug
include ../../mixins/moment.pug

block main
    if(role.permissions.includes("products_view"))
        +alert-success(5000)
        +alert-error(5000)

        h1(class="mb-4") Danh sách sản phẩm

        .card.mb-3
            .card-header Bộ lọc và Tìm kiếm
            .card-body
                .row
                    .col-6
                        +filter(filterStatus)
                    .col-6
                        +search(keyword)
        
        .card.mb-3
            .card-header Sắp xếp
            .card-body
                .row
                    .col-4
                        +sort()
                        
        .card.mb-3
            .card-header Danh sách
                .card-body
                    .row
                        .col-8
                            +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
                        .col-4
                            if(role.permissions.includes("products_create"))
                                a(
                                    href=`${prefixAdmin}/products/create`
                                    class="btn btn-outline-success"
                                ) + Thêm sản phẩm

                    table(
                        class="table table-hover table-sm table-striped table-bordered"
                        checkbox-multi
                    )
                        thead
                            tr
                                th
                                    input(type="checkbox" name="checkall")
                                th STT
                                th Hình ảnh
                                th Tiêu đề
                                th Giá
                                th Vị trí
                                th Trạng thái
                                th Tạo bởi
                                th Cập nhật
                                th Hành động
                        tbody
                            each item, index in products
                                tr 
                                    td
                                        input(type="checkbox" name="id" value=item.id)
                                    td #{objectPagination.itemsPerPage * (objectPagination.currentPage - 1) + index + 1}
                                    td
                                        img(
                                        src=item.thumbnail
                                        alt=item.title
                                        width="100px"
                                        height="auto"
                                        )
                                    td #{item.title}
                                    td #{item.price}$
                                    if(role.permissions.includes("products_edit"))
                                        td
                                            input(
                                                name="position"
                                                value=item.position
                                                type="number"
                                                style="width: 60px;"
                                                min="1"
                                            )
                                        td
                                            if(item.status == "active")
                                                a(
                                                    href="javascript:void(0)"
                                                    data-status=item.status
                                                    data-id=item.id
                                                    button-change-status 
                                                    class="badge bg-success"
                                                ) Hoạt động
                                            else
                                                a(
                                                    href="javascript:void(0)"
                                                    data-status=item.status
                                                    data-id=item.id
                                                    button-change-status 
                                                    class="badge bg-danger"
                                                ) Dừng hoạt động
                                    else 
                                        td #{item.position}
                                        td
                                            if(item.status == "active")
                                                span(class="badge bg-success") Hoạt động
                                            else
                                                span(class="badge bg-danger") Dừng hoạt động
                                    td
                                        span #{item.createdByFullName}
                                        +formatDateTime(item.createdAt)
                                    td
                                        span #{item.updatedByFullName}
                                        +formatDateTime(item.updatedAt)
                                    td
                                        a(
                                            href=`${prefixAdmin}/products/detail/${item.id}`
                                            class="btn btn-info btn-sm"
                                        ) Chi tiết
                                        if(role.permissions.includes("products_edit"))
                                            a(
                                                href=`${prefixAdmin}/products/edit/${item.id}`
                                                class="btn btn-warning btn-sm ms-1"
                                            ) Sửa
                                        if(role.permissions.includes("products_delete"))
                                            button(
                                                class="btn btn-danger btn-sm ms-1"
                                                button-delete
                                                data-id=item.id
                                            ) Xóa

        +pagination(objectPagination)

        form(
            action=""
            method="POST"
            form-change-status
            data-path=`${prefixAdmin}/products/change-status`
        )

        form(
            action=""
            method="POST"
            form-delete-item
            data-path=`${prefixAdmin}/products/delete`
        )

        script(src="/admin/js/product.js")
    else
        h1(class="mb-4") Bạn không có quyền truy cập trang này