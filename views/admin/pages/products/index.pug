extends  ../../layouts/default.pug
include ../../mixins/filter.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/alert.pug

block main
    +alert-success()

    h1(class="mb-4") Danh sách sản phẩm

    .card.mb-3
        .card-header Bộ lọc và Tìm kiếm
        .card-body
            .row
                .col-6
                    +filter(filterStatus)
                .col-6
                    +search(keyword)
                    
    .card.mb-3
        .card-header Danh sách
        if (products.length == 0)
            .card-body Chưa có sản phẩm nào
        else
            .card-body
                table.table.table-hover.table-sm.table-striped.table-bordered
                    thead
                        tr
                            td
                                input(type="checkbox" name="checkall")
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Giá
                            th Trạng thái
                            th Hành động
                    tbody
                        each item, index in products
                            tr 
                                td
                                    input(type="checkbox" name="id" value=item.id)
                                td #{objectPagination.itemsPerPage * (objectPagination.currentPage - 1) + index + 1}
                                td
                                    img(
                                    src=item.thumbnail
                                    alt=item.title
                                    width="100px"
                                    height="auto"
                                    )
                                td #{item.title}
                                td #{item.price}$
                                td
                                    if(item.status == "active")
                                        a(
                                            href="javascript:void(0)"
                                            data-status=item.status
                                            data-id=item.id
                                            button-change-status 
                                            class="badge bg-success"
                                        ) Hoạt động
                                    else
                                        a(
                                            href="javascript:void(0)"
                                            data-status=item.status
                                            data-id=item.id
                                            button-change-status 
                                            class="badge bg-danger"
                                        ) Dừng hoạt động
                                td
                                    button(class="btn btn-warning btn-sm") Sửa
                                    button(class="btn btn-danger btn-sm ms-1") Xóa

    +pagination(objectPagination)

    form(
        form-change-status
        method="POST"
        action=""
        data-path=`${prefixAdmin}/products/change-status`
    )

    script(src="/admin/js/product.js")