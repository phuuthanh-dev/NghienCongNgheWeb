extends  ../../layouts/default.pug

block main
    h1(class="mb-4") Danh sách sản phẩm

    .card.mb-3
        .card-header Bộ lọc và Tìm kiếm
        .card-body
            each item in filterStatus
                button(
                class=`btn btn-sm ms-1 btn-outline-success ${item.class}`
                button-status=item.status
                ) #{item.name}

    .card.mb-3
        .card-header Danh sách
        if (products.length == 0)
            .card-body Chưa có sản phẩm nào
        else
            .card-body
                table.table.table-hover.table-sm.table-striped.table-bordered
                    thead
                    tr
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th Trạng thái
                        th Hành động

                    tbody
                    each item, index in products
                        tr 
                        td #{index+1}
                        td
                            img(
                            src=item.thumbnail
                            alt=item.title
                            width="100px"
                            height="auto"
                            )
                        td #{item.title}
                        td #{item.price}$
                        td
                            if(item.status == "active")
                                a(href="#" class="badge bg-success") Hoạt động
                            else
                                a(href="#" class="badge bg-danger") Dừng hoạt động
                        td
                            button(class="btn btn-warning btn-sm") Sửa
                            button(class="btn btn-danger btn-sm ms-1") Xóa