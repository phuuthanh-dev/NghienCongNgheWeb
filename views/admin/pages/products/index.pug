extends  ../../layouts/default.pug

block main
  h1(class="mb-4") Danh sách sản phẩm

  table.table.table-hover.table-sm.table-striped.table-bordered
    thead
      tr
        th STT
        th Hình ảnh
        th Tiêu đề
        th Giá
        th Trạng thái
        th Hành động

    tbody
      each item, index in products
        tr 
          td #{index+1}
          td
            img(
              src=item.thumbnail
              alt=item.title
              width="100px"
              height="auto"
            )
          td #{item.title}
          td #{item.price}$
          td
            if(item.status == "active")
              span(class="badge bg-success") Hoạt động
            else
              span(class="badge bg-danger") Dừng hoạt động
          td
            button(class="btn btn-warning btn-sm") Sửa
            button(class="btn btn-danger btn-sm ms-1") Xóa