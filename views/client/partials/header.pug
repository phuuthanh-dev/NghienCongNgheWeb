include ../mixins/sub-menu.pug

header.header
    .container
        .row.align-items-center
            .col-3
                .inner-logo
                    a(href="/")
                        img(src="/images/favicon.svg", alt="Logo")
            .col-5
                form(
                    action="/search"
                    method="GET"
                ) 
                    div(class="form-group d-flex align-items-center mb-0")
                        input(
                            type="text"
                            placeholder="Nhập từ khóa..."
                            class="form-control"
                            name="keyword"
                            value=keyword
                        )
                        button(
                            type="submit"
                            class="btn btn-primary"
                            style="width: 115px"
                        ) Tìm kiếm
            .col-4
                .inner-menu
                    ul
                        li
                            a(href="/") Trang chủ
                        li(class="sub-menu")
                            -const pathProducts = "/products"
                            a(href=pathProducts) Sản phẩm
                            if(layoutProductCategories)
                                +sub-menu(layoutProductCategories, pathProducts)
                        li
                            a(href="/cart") Giỏ hàng
                        if(user)
                            li
                                a(href="/user/profile") #{user.fullName}
                            li
                                a(href="/chat") Chat
                            li
                                a(href="/user/logout") Đăng xuất
                        else
                            li
                                a(href="/user/login") Đăng nhập